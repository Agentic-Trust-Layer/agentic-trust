{
  "name": "agentic-trust",
  "version": "0.1.0",
  "private": true,
  "description": "Foundation for agentic trust packages - Core SDK and applications",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=@agentic-trust/admin",
    "create-agent": "pnpm -C packages/create-agentic-trust-agent dev",
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=@agentic-trust/admin",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo run type-check",
    "type-check:admin": "turbo run type-check --filter=@agentic-trust/admin"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

