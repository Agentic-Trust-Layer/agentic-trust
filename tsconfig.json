{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@agentic-trust/8004-ext-sdk": ["packages/erc8004-agentic-trust-sdk/src/index.ts"],
      "@agentic-trust/8004-ext-sdk/*": ["packages/erc8004-agentic-trust-sdk/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".turbo"]
}

