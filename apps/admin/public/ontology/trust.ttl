@base <https://agentictrust.io/ontology/core#> .
@prefix : <https://agentictrust.io/ontology/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix p-plan: <http://purl.org/net/p-plan#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://agentictrust.io/ontology/core/trust> a owl:Ontology ;
  rdfs:label "Agentic Trust Trust Model" ;
  owl:versionInfo "0.1.0" ;
  owl:imports <https://agentictrust.io/ontology/core> ;
  owl:imports <http://www.w3.org/ns/prov-o#> ;
  owl:imports <http://purl.org/net/p-plan#> ;
  owl:imports <http://purl.org/dc/terms/> .

########
# PROV-native DnS-style primitives (Situation / Description / Assertion / Act)
########

:Situation a owl:Class ;
  rdfs:label "Situation" ;
  rdfs:comment "Epistemic/social object that reifies a context in which entities play roles and relations are asserted to hold. Modeled as a PROV Entity (not an event)." ;
  rdfs:subClassOf prov:Entity .

:SituationDescription a owl:Class ;
  rdfs:label "SituationDescription" ;
  rdfs:comment "Conceptual schema defining roles/constraints/meaning for a Situation. Modeled as a Plan (prov:Plan, p-plan:Plan)." ;
  rdfs:subClassOf prov:Plan, p-plan:Plan .

:Assertion a owl:Class ;
  rdfs:label "Assertion" ;
  rdfs:comment "Epistemically neutral asserted content object (PROV Entity). Responsibility enters via Attestation activities." ;
  rdfs:subClassOf prov:Entity .

:AttestedAssertion a owl:Class ;
  rdfs:label "AttestedAssertion" ;
  rdfs:comment "Durable, attributable assertion artifact generated by an Attestation activity that used an Assertion." ;
  rdfs:subClassOf prov:Entity .

:AssertionAct a owl:Class ;
  rdfs:label "AssertionAct" ;
  rdfs:comment "Time-scoped act of asserting (PROV Activity)." ;
  rdfs:subClassOf prov:Activity .

:Attestation a owl:Class ;
  rdfs:label "Attestation" ;
  rdfs:comment "Accountable act (PROV Activity) that attests an Assertion by prov:used and produces an AttestedAssertion by prov:generated." ;
  rdfs:subClassOf :AssertionAct .

:Role a owl:Class ;
  rdfs:label "Role" ;
  rdfs:comment "Context-dependent role within a Situation (p-plan:Role)." ;
  rdfs:subClassOf prov:Entity, p-plan:Role .

:SituationParticipation a owl:Class ;
  rdfs:label "SituationParticipation" ;
  rdfs:comment "Reified link between a Situation and a participating Agent, qualified by a Role." ;
  rdfs:subClassOf prov:Entity .

########
# Situation/AssertionAct linking properties
########

:hasSituationDescription a owl:ObjectProperty ;
  rdfs:label "has situation description" ;
  rdfs:domain :Situation ;
  rdfs:range :SituationDescription .

:hasRole a owl:ObjectProperty ;
  rdfs:label "has role" ;
  rdfs:domain :Situation ;
  rdfs:range :Role .

:rolePlayer a owl:ObjectProperty ;
  rdfs:label "role player" ;
  rdfs:domain :Role ;
  rdfs:range prov:Agent .

:assertsSituation a owl:ObjectProperty ;
  rdfs:label "asserts situation" ;
  rdfs:domain :AssertionAct ;
  rdfs:range :Situation .

:assertedInAct a owl:ObjectProperty ;
  rdfs:label "asserted in act" ;
  rdfs:comment "Navigation helper: Situation -> AssertionAct (inverse of assertsSituation)." ;
  rdfs:domain :Situation ;
  rdfs:range :AssertionAct .

:recordsSituation a owl:ObjectProperty ;
  rdfs:label "records situation" ;
  rdfs:domain :AttestedAssertion ;
  rdfs:range :Situation .

:assertsDescription a owl:ObjectProperty ;
  rdfs:label "asserts description" ;
  rdfs:domain :AssertionAct ;
  rdfs:range :SituationDescription .

:generatedAssertionRecord a owl:ObjectProperty ;
  rdfs:label "generated assertion record" ;
  rdfs:subPropertyOf prov:generated ;
  rdfs:domain :AssertionAct ;
  rdfs:range :AttestedAssertion .

:assertionRecordOf a owl:ObjectProperty ;
  rdfs:label "assertion record of" ;
  rdfs:subPropertyOf prov:wasGeneratedBy ;
  rdfs:domain :AttestedAssertion ;
  rdfs:range :AssertionAct .

:generatedSituation a owl:ObjectProperty ;
  rdfs:label "generated situation" ;
  rdfs:subPropertyOf prov:generated ;
  rdfs:domain :AssertionAct ;
  rdfs:range :Situation .

:aboutSubject a owl:ObjectProperty ;
  rdfs:label "about subject" ;
  rdfs:domain prov:Entity ;
  rdfs:range prov:Entity .

:isAboutAgent a owl:ObjectProperty ;
  rdfs:label "is about agent" ;
  rdfs:subPropertyOf :aboutSubject ;
  rdfs:domain :Situation ;
  rdfs:range prov:Agent .

:hasSituationParticipant a owl:ObjectProperty ;
  rdfs:label "has situation participant" ;
  rdfs:domain :Situation ;
  rdfs:range prov:Agent .

:qualifiedSituationParticipation a owl:ObjectProperty ;
  rdfs:label "qualified situation participation" ;
  rdfs:domain :Situation ;
  rdfs:range :SituationParticipation .

:situationParticipant a owl:ObjectProperty ;
  rdfs:label "situation participant" ;
  rdfs:domain :SituationParticipation ;
  rdfs:range prov:Agent .

:situationParticipantRole a owl:ObjectProperty ;
  rdfs:label "situation participant role" ;
  rdfs:domain :SituationParticipation ;
  rdfs:range :Role .

########
# Trust specializations
########

:TrustDescription a owl:Class ;
  rdfs:label "TrustDescription" ;
  rdfs:subClassOf :SituationDescription .

:TrustSituation a owl:Class ;
  rdfs:label "TrustSituation" ;
  rdfs:subClassOf :Situation .

:VerificationTrustSituation a owl:Class ;
  rdfs:label "VerificationTrustSituation" ;
  rdfs:subClassOf :TrustSituation .

:ReputationTrustSituation a owl:Class ;
  rdfs:label "ReputationTrustSituation" ;
  rdfs:subClassOf :TrustSituation .

:DelegationSituation a owl:Class ;
  rdfs:label "DelegationSituation" ;
  rdfs:subClassOf :Situation .

:DelegationTrustSituation a owl:Class ;
  rdfs:label "DelegationTrustSituation" ;
  rdfs:subClassOf :TrustSituation, :DelegationSituation .

:RelationshipSituation a owl:Class ;
  rdfs:label "RelationshipSituation" ;
  rdfs:subClassOf :Situation .

:RelationshipTrustSituation a owl:Class ;
  rdfs:label "RelationshipTrustSituation" ;
  rdfs:subClassOf :TrustSituation, :RelationshipSituation .

:RequestSituation a owl:Class ;
  rdfs:label "RequestSituation" ;
  rdfs:subClassOf :Situation .

:VerificationRequestSituation a owl:Class ;
  rdfs:label "VerificationRequestSituation" ;
  rdfs:subClassOf :RequestSituation .

:ReputationRequestSituation a owl:Class ;
  rdfs:label "ReputationRequestSituation" ;
  rdfs:subClassOf :RequestSituation .

:FeedbackAuthRequestSituation a owl:Class ;
  rdfs:label "FeedbackAuthRequestSituation" ;
  rdfs:subClassOf :RequestSituation .

########
# Trust assertions (durable records) + acts (provenance)
########

:TrustAssertion a owl:Class ;
  rdfs:label "TrustAssertion" ;
  rdfs:comment "Durable attributable trust assertion artifact (record/evidence).";
  rdfs:subClassOf :AttestedAssertion .

:TrustAssertionAct a owl:Class ;
  rdfs:label "TrustAssertionAct" ;
  rdfs:comment "Accountable act that generates a TrustAssertion record." ;
  rdfs:subClassOf :Attestation .

:VerificationTrustAssertion a owl:Class ;
  rdfs:label "VerificationTrustAssertion" ;
  rdfs:subClassOf :TrustAssertion .

:VerificationTrustAssertionAct a owl:Class ;
  rdfs:label "VerificationTrustAssertionAct" ;
  rdfs:subClassOf :TrustAssertionAct .

:ReputationTrustAssertion a owl:Class ;
  rdfs:label "ReputationTrustAssertion" ;
  rdfs:subClassOf :TrustAssertion .

:ReputationTrustAssertionAct a owl:Class ;
  rdfs:label "ReputationTrustAssertionAct" ;
  rdfs:subClassOf :TrustAssertionAct .

:DelegationTrustAssertion a owl:Class ;
  rdfs:label "DelegationTrustAssertion" ;
  rdfs:subClassOf :TrustAssertion .

:DelegationTrustAssertionAct a owl:Class ;
  rdfs:label "DelegationTrustAssertionAct" ;
  rdfs:subClassOf :TrustAssertionAct .

:RelationshipTrustAssertion a owl:Class ;
  rdfs:label "RelationshipTrustAssertion" ;
  rdfs:subClassOf :TrustAssertion .

:RelationshipTrustAssertionAct a owl:Class ;
  rdfs:label "RelationshipTrustAssertionAct" ;
  rdfs:subClassOf :TrustAssertionAct .

:hasTrustScore a owl:DatatypeProperty ;
  rdfs:label "has trust score" ;
  rdfs:domain :TrustAssertion ;
  rdfs:range xsd:decimal .

########
# Assertion summaries (materialized aggregates for fast query)
########

:FeedbackAssertionSummary a owl:Class ;
  rdfs:label "FeedbackAssertionSummary" ;
  rdfs:comment "Materialized summary of feedback/reputation assertions for an agent (e.g. count and other rollups)." ;
  rdfs:subClassOf prov:Entity .

:ValidationAssertionSummary a owl:Class ;
  rdfs:label "ValidationAssertionSummary" ;
  rdfs:comment "Materialized summary of validation/verification assertions for an agent (e.g. count and other rollups)." ;
  rdfs:subClassOf prov:Entity .

:hasFeedbackAssertionSummary a owl:ObjectProperty ;
  rdfs:label "has feedback assertion summary" ;
  rdfs:comment "Links an agent to its feedback assertion summary entity." ;
  rdfs:domain :AIAgent ;
  rdfs:range :FeedbackAssertionSummary .

:hasValidationAssertionSummary a owl:ObjectProperty ;
  rdfs:label "has validation assertion summary" ;
  rdfs:comment "Links an agent to its validation assertion summary entity." ;
  rdfs:domain :AIAgent ;
  rdfs:range :ValidationAssertionSummary .

:feedbackAssertionCount a owl:DatatypeProperty ;
  rdfs:label "feedbackAssertionCount" ;
  rdfs:comment "Precomputed count of feedback/reputation assertions for an agent (materialized on a summary entity)." ;
  rdfs:domain :FeedbackAssertionSummary ;
  rdfs:range xsd:integer .

:validationAssertionCount a owl:DatatypeProperty ;
  rdfs:label "validationAssertionCount" ;
  rdfs:comment "Precomputed count of validation/verification assertions for an agent (materialized on a summary entity)." ;
  rdfs:domain :ValidationAssertionSummary ;
  rdfs:range xsd:integer .

:assertedBy a owl:ObjectProperty ;
  rdfs:label "asserted by" ;
  rdfs:subPropertyOf prov:wasAssociatedWith ;
  rdfs:domain :AssertionAct ;
  rdfs:range prov:Agent .

########
# Delegation permissions / caveats
########

:DelegationPermission a owl:Class ;
  rdfs:label "DelegationPermission" ;
  rdfs:subClassOf prov:Entity .

:DelegationCaveat a owl:Class ;
  rdfs:label "DelegationCaveat" ;
  rdfs:subClassOf prov:Entity .

:CaveatEnforcer a owl:Class ;
  rdfs:label "CaveatEnforcer" ;
  rdfs:subClassOf prov:Entity .

:delegatedBy a owl:ObjectProperty ;
  rdfs:label "delegated by" ;
  owl:inverseOf prov:actedOnBehalfOf ;
  rdfs:domain prov:Agent ;
  rdfs:range prov:Agent .

:delegationDelegator a owl:ObjectProperty ;
  rdfs:label "delegation delegator" ;
  rdfs:domain :DelegationSituation ;
  rdfs:range prov:Agent .

:delegationDelegatee a owl:ObjectProperty ;
  rdfs:label "delegation delegatee" ;
  rdfs:domain :DelegationSituation ;
  rdfs:range prov:Agent .

:delegationGrantsPermission a owl:ObjectProperty ;
  rdfs:label "delegation grants permission" ;
  rdfs:domain :DelegationSituation ;
  rdfs:range :DelegationPermission .

:delegationHasCaveat a owl:ObjectProperty ;
  rdfs:label "delegation has caveat" ;
  rdfs:domain :DelegationSituation ;
  rdfs:range :DelegationCaveat .

:permissionAction a owl:DatatypeProperty ;
  rdfs:label "permission action" ;
  rdfs:domain :DelegationPermission ;
  rdfs:range xsd:string .

:permissionResource a owl:DatatypeProperty ;
  rdfs:label "permission resource" ;
  rdfs:domain :DelegationPermission ;
  rdfs:range xsd:string .

:permissionScopeJson a owl:DatatypeProperty ;
  rdfs:label "permission scope json" ;
  rdfs:domain :DelegationPermission ;
  rdfs:range xsd:string .

:caveatEnforcer a owl:ObjectProperty ;
  rdfs:label "caveat enforcer" ;
  rdfs:domain :DelegationCaveat ;
  rdfs:range :CaveatEnforcer .

:caveatTermsJson a owl:DatatypeProperty ;
  rdfs:label "caveat terms json" ;
  rdfs:domain :DelegationCaveat ;
  rdfs:range xsd:string .

:delegationAuthorityValue a owl:DatatypeProperty ;
  rdfs:label "delegation authority value" ;
  rdfs:domain :DelegationSituation ;
  rdfs:range xsd:string .

:delegationExpiresAtTime a owl:DatatypeProperty ;
  rdfs:label "delegation expires at time" ;
  rdfs:domain :DelegationSituation ;
  rdfs:range xsd:dateTime .

########
# Relationships + commitments
########

:Relationship a owl:Class ;
  rdfs:label "Relationship" ;
  rdfs:subClassOf prov:Entity .

:Commitment a owl:Class ;
  rdfs:label "Commitment" ;
  rdfs:subClassOf prov:Entity .

:DelegationCommitment a owl:Class ;
  rdfs:label "DelegationCommitment" ;
  rdfs:subClassOf :Commitment .

:MembershipCommitment a owl:Class ;
  rdfs:label "MembershipCommitment" ;
  rdfs:subClassOf :Commitment .

:FeedbackAuthorizationCommitment a owl:Class ;
  rdfs:label "FeedbackAuthorizationCommitment" ;
  rdfs:subClassOf :Commitment .

:assertsRelationship a owl:ObjectProperty ;
  rdfs:label "asserts relationship" ;
  rdfs:domain :RelationshipTrustAssertion ;
  rdfs:range :Relationship .

:hasRelationship a owl:ObjectProperty ;
  rdfs:label "has relationship" ;
  rdfs:domain prov:Agent ;
  rdfs:range :Relationship .

:participatesInRelationship a owl:ObjectProperty ;
  rdfs:label "participates in relationship" ;
  rdfs:domain :Relationship ;
  rdfs:range prov:Agent .

:qualifiesRelationship a owl:ObjectProperty ;
  rdfs:label "qualifies relationship" ;
  rdfs:domain :TrustAssertion ;
  rdfs:range :Relationship .

:hasTrustAssertion a owl:ObjectProperty ;
  rdfs:label "has trust assertion" ;
  rdfs:domain prov:Agent ;
  rdfs:range :TrustAssertion .

:hasVerificationAssertion a owl:ObjectProperty ;
  rdfs:label "has verification assertion" ;
  rdfs:subPropertyOf :hasTrustAssertion ;
  rdfs:domain prov:Agent ;
  rdfs:range :VerificationTrustAssertion .

:hasReputationAssertion a owl:ObjectProperty ;
  rdfs:label "has reputation assertion" ;
  rdfs:subPropertyOf :hasTrustAssertion ;
  rdfs:domain prov:Agent ;
  rdfs:range :ReputationTrustAssertion .

:hasRelationshipAssertion a owl:ObjectProperty ;
  rdfs:label "has relationship assertion" ;
  rdfs:subPropertyOf :hasTrustAssertion ;
  rdfs:domain prov:Agent ;
  rdfs:range :RelationshipTrustAssertion .
