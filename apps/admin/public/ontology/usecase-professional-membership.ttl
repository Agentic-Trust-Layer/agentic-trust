@base <https://agentictrust.io/ontology/core#> .
@prefix : <https://agentictrust.io/ontology/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix oasf: <https://agentictrust.io/ontology/oasf#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix p-plan: <http://purl.org/net/p-plan#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<https://agentictrust.io/ontology/core/usecase/professional-membership> a owl:Ontology ;
  rdfs:label "Use Case: Professional Membership (WGA)" ;
  owl:versionInfo "0.1.0" ;
  owl:imports <https://agentictrust.io/ontology/core> ;
  owl:imports <https://agentictrust.io/ontology/core/discovery> .

########
# Example: "Join the Writers Guild" (WGA-style regulated membership)
########

# Example OASF skills used in this scenario (kept in oasf namespace for discovery)
<https://agentictrust.io/ontology/oasf#skill/professional_membership/wga/eligibility_evaluate>
  a oasf:Skill ;
  oasf:key "professional_membership/wga/eligibility_evaluate" ;
  oasf:caption "WGA eligibility evaluation" ;
  oasf:description "Evaluate whether a writer meets current WGA membership eligibility requirements based on credits, contracts, and employment history." ;
  oasf:category "professional_membership" ;
  :hasSkillType :skillType.eligibilityAnalysis .

<https://agentictrust.io/ontology/oasf#skill/professional_membership/writer/credits_aggregate>
  a oasf:Skill ;
  oasf:key "professional_membership/writer/credits_aggregate" ;
  oasf:caption "Writing credit aggregation & normalization" ;
  oasf:description "Collect, verify, and normalize writing credits and supporting documents (e.g., credits databases, contracts, pay stubs, attestations)." ;
  oasf:category "professional_membership" ;
  :hasSkillType :skillType.credentialEvidence .

<https://agentictrust.io/ontology/oasf#skill/professional_membership/guild/application_submit>
  a oasf:Skill ;
  oasf:key "professional_membership/guild/application_submit" ;
  oasf:caption "Guild application submission" ;
  oasf:description "Submit a guild membership application with required evidence and fees; return receipt/reference id." ;
  oasf:category "professional_membership" ;
  :hasSkillType :skillType.applicationExecution .

<https://agentictrust.io/ontology/oasf#skill/professional_membership/guild/application_monitor>
  a oasf:Skill ;
  oasf:key "professional_membership/guild/application_monitor" ;
  oasf:caption "Guild application status monitoring" ;
  oasf:description "Monitor submitted application status and notify stakeholders of changes (periodic polling or portal notifications)." ;
  oasf:category "professional_membership" ;
  :hasSkillType :skillType.processMonitoring .

<https://agentictrust.io/ontology/oasf#skill/professional_membership/writer/career_pathway_advice>
  a oasf:Skill ;
  oasf:key "professional_membership/writer/career_pathway_advice" ;
  oasf:caption "Career pathway advisory" ;
  oasf:description "Recommend alternative strategies to become eligible when requirements are not met (e.g., qualifying work, credits, signatory projects)." ;
  oasf:category "professional_membership" ;
  :hasSkillType :skillType.advisoryStrategy .

:intent.joinWgaMembership
  a :Intent ;
  :hasIntentType :intentType.membershipQualification ;
  :targetOrganization "Writers Guild of America" ;
  :desiredStatus "Active member" ;
  dcterms:description "I want to be added to the movie writers guild (WGA)."@en .

:plan.joinWgaMembership
  a :Plan ;
  dcterms:title "Join WGA membership plan"@en ;
  :planForIntent :intent.joinWgaMembership ;
  :hasStep :planStep.joinWga.1_assessEligibility ;
  :hasStep :planStep.joinWga.2_collectEvidence ;
  :hasStep :planStep.joinWga.3_submitApplication ;
  :hasStep :planStep.joinWga.4_monitorStatus .

:planStep.joinWga.1_assessEligibility
  a :PlanStep ;
  :stepOrder 1 ;
  :stepTaskType :taskType.eligibilityAssessment ;
  :stepActionType :actionType.httpGet ;
  p-plan:hasInputVar :intent.joinWgaMembership ;
  p-plan:hasOutputVar :task.assessWgaEligibility ;
  rdfs:comment "Fetch eligibility rules, evaluate eligibility, produce gap analysis."@en .

:planStep.joinWga.2_collectEvidence
  a :PlanStep ;
  :stepOrder 2 ;
  :stepTaskType :taskType.evidenceCollection ;
  :stepActionType :actionType.apiCall ;
  p-plan:hasOutputVar :task.collectWritingCredits ;
  rdfs:comment "Aggregate credits/contracts into an evidence bundle with provenance."@en .

:planStep.joinWga.3_submitApplication
  a :PlanStep ;
  :stepOrder 3 ;
  :stepTaskType :taskType.applicationSubmission ;
  :stepActionType :actionType.fileUpload ;
  p-plan:hasOutputVar :task.submitGuildApplication ;
  rdfs:comment "Submit forms + evidence + fees and capture receipt."@en .

:planStep.joinWga.4_monitorStatus
  a :PlanStep ;
  :stepOrder 4 ;
  :stepTaskType :taskType.statusMonitoring ;
  :stepActionType :actionType.statusCheck ;
  p-plan:hasOutputVar :task.monitorApplicationStatus ;
  rdfs:comment "Poll/monitor application status over weeks/months and notify user."@en .

:task.assessWgaEligibility
  a :Task ;
  :hasTaskType :taskType.eligibilityAssessment ;
  :usesSkill <https://agentictrust.io/ontology/oasf#skill/professional_membership/wga/eligibility_evaluate> ;
  prov:used :intent.joinWgaMembership .

:task.collectWritingCredits
  a :Task ;
  :hasTaskType :taskType.evidenceCollection ;
  :usesSkill <https://agentictrust.io/ontology/oasf#skill/professional_membership/writer/credits_aggregate> ;
  prov:used :intent.joinWgaMembership .

:task.submitGuildApplication
  a :Task ;
  :hasTaskType :taskType.applicationSubmission ;
  :usesSkill <https://agentictrust.io/ontology/oasf#skill/professional_membership/guild/application_submit> ;
  prov:used :intent.joinWgaMembership .

:task.monitorApplicationStatus
  a :Task ;
  :hasTaskType :taskType.statusMonitoring ;
  :usesSkill <https://agentictrust.io/ontology/oasf#skill/professional_membership/guild/application_monitor> ;
  prov:used :intent.joinWgaMembership .

# Example executable actions (atomic)
:action.fetchWgaEligibilityRules
  a :Action ;
  :actionTarget "https://www.wga.org/members/membership-information" ;
  :actionTool "http" ;
  :actionParametersJson "{\"method\":\"GET\"}" ;
  :usesSkill <https://agentictrust.io/ontology/oasf#skill/professional_membership/wga/eligibility_evaluate> .

:action.queryWritingCredits
  a :Action ;
  :actionTool "credits-api" ;
  :actionParametersJson "{\"source\":\"imdb\",\"writerName\":\"<user>\"}" ;
  :usesSkill <https://agentictrust.io/ontology/oasf#skill/professional_membership/writer/credits_aggregate> .

:action.uploadApplicationPacket
  a :Action ;
  :actionTool "guild-portal" ;
  :actionParametersJson "{\"action\":\"upload\",\"packet\":\"<evidence_bundle>\"}" ;
  :usesSkill <https://agentictrust.io/ontology/oasf#skill/professional_membership/guild/application_submit> .

:action.pollApplicationStatus
  a :Action ;
  :actionTool "guild-portal" ;
  :actionParametersJson "{\"action\":\"status\",\"intervalDays\":7}" ;
  :usesSkill <https://agentictrust.io/ontology/oasf#skill/professional_membership/guild/application_monitor> .
